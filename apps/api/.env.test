# Test Environment - No Real API Keys Required
NODE_ENV=test
PORT=3001

# Mock Database (SQLite in memory)
DATABASE_URL=sqlite::memory:
DB_SSL=false

# Mock Redis (ioredis-mock)
REDIS_URL=redis://localhost:6379

# Mock Authentication
JWT_SECRET=test-jwt-secret-for-development-only-32-chars
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
SESSION_SECRET=test-session-secret-for-development

# Mock Google OAuth (will use fake responses)
GOOGLE_CLIENT_ID=mock-google-client-id
GOOGLE_CLIENT_SECRET=mock-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Security (relaxed for testing)
CORS_ORIGIN=http://localhost:3000
CSRF_SECRET=test-csrf-secret-for-development

# Test Mode Flags
ENABLE_MOCK_MODE=true
ENABLE_GOOGLE_API_MOCK=true
ENABLE_DATABASE_MOCK=false
ENABLE_REDIS_MOCK=true

# Logging
LOG_LEVEL=debug