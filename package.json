{
  "name": "class-schedule-sync",
  "version": "1.0.0",
  "description": "Class schedule management system with Google Calendar sync",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:test": "node scripts/start-test-mode.js",
    "test-mode": "node scripts/complete-test-mode.js",
    "test-mode:simple": "node scripts/simple-test-mode.js",
    "test-mode:complete": "node scripts/complete-test-mode.js",
    "mock-api": "node scripts/mock-api-server.js",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "db:migrate": "cd apps/api && npm run db:migrate",
    "db:seed": "cd apps/api && npm run db:seed",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "test:all": "node scripts/run-all-tests.js",
    "test:quick": "node scripts/run-all-tests.js quick",
    "test:ci": "node scripts/test-runner.js unit integration performance",
    "test:smoke": "jest --config tests/smoke/jest.config.js",
    "test:acceptance": "jest --config tests/acceptance/jest.config.js",
    "test:security": "node scripts/security-audit.js",
    "test:performance": "node scripts/performance-benchmark.js",
    "validate:production": "node scripts/validate-production.js",
    "check:deployment": "node scripts/deployment-readiness.js",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
