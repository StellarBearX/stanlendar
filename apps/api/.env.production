# Production Environment Variables for NestJS Backend
# These should be set in Railway/Render dashboard

# Application Configuration
NODE_ENV=production
PORT=3001
API_VERSION=v1

# Frontend URL
FRONTEND_URL=https://your-app.vercel.app

# Database Configuration (Supabase)
DATABASE_URL=postgresql://postgres:[password]@[host]:5432/[database]?sslmode=require
DB_SSL=true
DB_POOL_SIZE=10
DB_TIMEOUT=30000

# Redis Configuration (Redis Cloud)
REDIS_URL=redis://:[password]@[host]:[port]
REDIS_TLS=true
REDIS_POOL_SIZE=5

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-256-bits-minimum
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-byte-encryption-key-for-aes-256
SESSION_SECRET=your-session-secret-key

# Google OAuth & API
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-app.vercel.app/auth/callback

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=100
RATE_LIMIT_GLOBAL_MAX=1000

# Google API Quotas
GOOGLE_API_QUOTA_LIMIT=3000
GOOGLE_API_BATCH_SIZE=50

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Security Headers
CORS_ORIGIN=https://your-app.vercel.app
CSRF_SECRET=your-csrf-secret-key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_TIMEOUT=30000